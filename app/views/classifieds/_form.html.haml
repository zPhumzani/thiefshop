= simple_form_for(@classified) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.association :category
    = f.input :price
    = f.input :location
    = f.input :description
    = f.input :file, as: :file
    = f.input :all_tags, placeholder: "Tags separated with comma"

  .form-actions
    = f.button :submit
