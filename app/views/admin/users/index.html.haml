- page_header "Listing All Users"

%table.table
  %thead
    %tr
      %th Slug
      %th First name
      %th Last name
      %th Email
      %th Admin
      %th
      %th
      %th

  %tbody
    - @admin_users.each do |admin_user|
      %tr
        %td= admin_user.slug
        %td= admin_user.first_name
        %td= admin_user.last_name
        %td= admin_user.email
        %td= admin_user.admin
        %td= link_to 'Show', admin_user
        %td= link_to 'Edit', edit_admin_user_path(admin_user)
        %td= link_to 'Destroy', admin_user, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New User', new_admin_user_path
